<% content_for :nav_active_item, :applications %>
<% content_for :page_title, t('.add_application') %>

<h1><%= t('.add_application') %></h1>

<%= form_for @application, url: web_organization_applications_path do |form| %>
  <%= render partial: 'form', locals: { form: form } %>

  <p class="form-actions">
    <%= button_tag icon(:plus, t('.create')), class: 'btn btn-primary' %>
    <%= link_to t('.cancel'), web_organization_applications_path, class: 'btn btn-default' %>
  </p>
<% end %>
