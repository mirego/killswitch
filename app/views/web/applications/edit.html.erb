<% content_for :nav_active_item, :applications %>
<% content_for :page_title, t('.edit_application', application: present(@application).name) %>

<h1><%= t('.edit_application', application: present(@application).name) %></h1>

<%= form_for @application, url: web_organization_application_path do |form| %>
  <%= render partial: 'form', locals: { form: form } %>

  <p class="form-actions">
    <%= button_tag icon(:save, t('.save')), class: 'btn btn-primary' %>
    <%= link_to t('.cancel'), web_organization_application_path, class: 'btn btn-default' %>
  </p>
<% end %>
